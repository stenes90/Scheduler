@model SchedulerV3.ViewModel.TournamentViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">

<head runat="server">
    <title>Create Tournament</title>
</head>

<body>

    @{
        if (Model.Tournament.Id != 0)
        {
            <h2>Edit Tournament</h2>
            @Html.Partial("_TournamentSteps");
        }
        else
        {
            <h2>Create Tournament</h2>
        }

    }
    
    @using (Html.BeginForm("Save", "Tournament", FormMethod.Post, new { @autocomplete = "off" }))
    {
        <div class="input-group">
            @Html.LabelFor(c => c.Tournament.Name)
            @Html.TextBoxFor(c => c.Tournament.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.Tournament.Name)
        </div>

        <div class='input-group'>
            @Html.LabelFor(c => c.Tournament.StartDate)
            @Html.TextBoxFor(c => c.Tournament.StartDate, new { @class = "form-control datetimepicker1", @type = "text" })
            @Html.ValidationMessageFor(c => c.Tournament.StartDate)
        </div>

        <div class='input-group'>
            @Html.LabelFor(c => c.Tournament.EndDate)
            @Html.TextBoxFor(c => c.Tournament.EndDate, new { @class = "form-control datetimepicker1", @type = "text" })
        </div>

        <br>
        <input autocomplete="off" name="hidden" type="text" style="display:none;">
        @Html.HiddenFor(c => c.Tournament.Id)




        if (Model.Tournament.Id == 0)
        {
            <button type="submit" class="btn btn-primary">Create</button>
        }
        else
        {
            <button type="submit" class="btn btn-primary">Save</button>
        }

    }







    @section scripts
    {


        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/css/bootstrap-datetimepicker.min.css" />
        <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>

        <script type="text/javascript">
            $(function () {
                $('.datetimepicker1').datetimepicker({
                    format: 'MM/DD/YYYY',
                });
            });
        </script>

    }
</body>
</html>